{
  "manifest_version": 3,
  "name": "Discord Decoration Grabber",
  "version": "1.0.0",
  "description": "Thu thập tất cả avatar decorations, profile effects từ Discord",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://discord.com/*",
    "https://cdn.discordapp.com/*",
    "https://canary.discord.com/*",
    "https://ptb.discord.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://discord.com/*",
        "https://canary.discord.com/*",
        "https://ptb.discord.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
